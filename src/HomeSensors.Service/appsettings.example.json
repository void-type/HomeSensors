{
  "Name": "Development",
  "ConnectionStrings": {
    "xHomeSensors": "Server=server;Database=HomeSensorsTest;User Id=User;Password=password1;",
    "HomeSensors": "Server=(LocalDb)\\MSSQLLocalDB;Database=HomeSensorsDev;trusted_connection=true;"
  },
  "Mqtt": {
    "Server": "localhost",
    "Port": null,
    "Username": "mqtt_user",
    "Password": "password",
    "LogMessages": false
  },
  "Notifications": {
    "IsEnabled": true,
    "EmailRecipients": ["user@example.com"],
    "OverrideEmailRecipients": [],
    "FromAddress": "do-not-reply@example.com",
    "EmailTextSubtype": "html",
    "SmtpAddress": "smtp.example.com",
    "SmtpPort": 587,
    "SmtpSecureSocketOption": "Auto",
    "SmtpUseAuthentication": true,
    "SmtpUserName": "service@example.com",
    "SmtpPassword": "password1",
    "SignatureName": "Development",
    "SignatureLink": "https://localhost:5001"
  },
  "Workers": {
    "AlertsEnabled": true,
    "AlertsBetweenTicksMinutes": 20,
    "AlertsBetweenNotificationsMinutes": 120,
    "MqttTemperaturesEnabled": true,
    "MqttTemperaturesTopics": ["rtl_433/#"],
    "SummarizeTemperatureReadingsEnabled": true,
    "SummarizeTemperatureReadingsBetweenTicksMinutes": 60,
    "SummarizeTemperatureReadingsSummarizeCutoffDays": 30,
    "SummarizeTemperatureReadingsChunkSize": 1000,
    "SummarizeTemperatureReadingsDelayFirstTickMinutes": 5
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "Enrich": ["FromLogContext"],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\appLogs\\HomeSensors.Service\\HomeSensors.Service-Development_.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 60,
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10000000,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}]{Scope:l} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}]{Scope:l} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
