{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "build",
        "command": "./build.ps1",
        "options": {
            "cwd": "./build"
        },
        "type": "shell",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": [
            "$node-sass",
            "$eslint-compact",
            "$msCompile"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false,
            "group": "build"
        }
    },
    {
      "label": "build-debug",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "format",
        "command": "./format.ps1",
        "options": {
            "cwd": "./build"
        },
        "type": "shell",
        "problemMatcher": [
            "$msCompile"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false,
            "group": "build"
        }
    },
    {
        "label": "update-dependencies",
        "command": "./updateDependencies.ps1",
        "options": {
            "cwd": "./build"
        },
        "type": "shell",
        "problemMatcher": [
            "$msCompile"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false,
            "group": "build"
        }
    },
    {
      "label": "watch-service",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/src/HomeSensors.Service/HomeSensors.Service.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
        "label": "watch-client",
        "command": "./watchClient.ps1",
        "options": {
            "cwd": "./build"
        },
        "type": "shell",
        "problemMatcher": [
            "$node-sass",
            "$eslint-compact"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false,
            "group": "watch"
        }
    },
    {
        "label": "watch-web",
        "command": "./watchWeb.ps1",
        "options": {
            "cwd": "./build"
        },
        "type": "shell",
        "problemMatcher": [
            "$msCompile"
        ],
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false,
            "group": "watch"
        }
    },
    {
        "label": "watch-dev",
        "dependsOn": ["watch-client", "watch-web"],
        "problemMatcher": []
    }
  ]
}
